<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:background="@drawable/joint_group_back"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/groupImageID"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:src="@drawable/programming_community"
    android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/groupNameID"
        android:layout_below="@+id/groupImageID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming Community"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/memberTextID"
        android:layout_below="@+id/groupNameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42k members"
        android:fontFamily="@font/roboto_medium"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray"/>
    <RelativeLayout
        android:id="@+id/joinButtonID"
        android:layout_below="@+id/memberTextID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/add_friend_btn">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:padding="5dp"/>
    </RelativeLayout>
</RelativeLayout>